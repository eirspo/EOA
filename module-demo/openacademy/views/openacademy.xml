                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Sessions">
                            <field name="session_ids">
                                <tree string="Registered sessions">
                                    <field name="name"/>
                                    <field name="instructor_id"/>
